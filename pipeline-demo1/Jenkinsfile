pipeline{
    agent any
    environment {
        ENV_TAG = "dev"
        WEEE_APP = "pipeline-demo1"
    }
    parameters {
        gitParameter branchFilter: 'origin/(.*)',
            defaultValue: 'master',
            name: 'VERSION',
            type: 'PT_BRANCH',
            sortMode: 'DESCENDING_SMART',
            useRepository: "https://github.com/GacuiSayweee/gacui-ops-cicd.git"
        virtualEnv name: 'x-canary-tag', baseTag: '${env.ENV_TAG}'
    }
    stages {
        stage('Deploy') {
            steps{
                script {
                    deploymentEnhance(appname: "${env.WEEE_APP}", virtualEnvTag: 'x-canary-tag')
                    sh """
                    echo "cat deploy.yaml --->>>"
                    cat /var/jenkins_home/workspace/pipeline-demo1/deploy.yaml
                    echo "cat deploy.yaml ---<<<"
                    """
                }

            }
        }
    }
}
