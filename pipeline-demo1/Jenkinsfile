def VIRTUAL_ENV_TAG = "x-canary-tag"
def ENV_TAG = "devvvv"
pipeline{
    agent any
    environment {
        WEEE_APP = "pipeline-demo1"
    }
    parameters {
        gitParameter branchFilter: 'origin/(.*)',
            defaultValue: 'master',
            name: 'VERSION',
            type: 'PT_BRANCH',
            sortMode: 'DESCENDING_SMART',
            useRepository: "https://github.com/GacuiSayweee/gacui-ops-cicd.git"
        virtualEnv name: "${VIRTUAL_ENV_TAG}", baseTag: "${ENV_TAG}"
    }
    stages {
        stage('Deploy') {
            steps{
                script {
                    deploymentEnhance(appname: "${env.WEEE_APP}", virtualEnvTag: "${params.VIRTUAL_ENV_TAG}")
                    sh """
                    echo "cat deploy.yaml --->>>"
                    cat deploy.yaml
                    echo "cat deploy.yaml ---<<<"
                    """
                }

            }
        }
    }
}
